{
	// Rust Analyzer settings for optimal development experience
	"rust-analyzer.checkOnSave.command": "clippy",
	"rust-analyzer.checkOnSave.extraArgs": ["--all-targets", "--all-features"],

	// Auto-format on save
	"[rust]": {
		"editor.defaultFormatter": "rust-lang.rust-analyzer",
		"editor.formatOnSave": true,
		"editor.formatOnType": false
	},

	// Show inlay hints (helpful for learning Rust)
	"rust-analyzer.inlayHints.typeHints.enable": true,
	"rust-analyzer.inlayHints.parameterHints.enable": true,
	"rust-analyzer.inlayHints.chainingHints.enable": true,

	// Cargo features
	"rust-analyzer.cargo.features": "all",
	"rust-analyzer.cargo.loadOutDirsFromCheck": true,

	// Proc macro support
	"rust-analyzer.procMacro.enable": true,

	// Python settings for Spleeter
	"python.defaultInterpreterPath": "${workspaceFolder}/venv/bin/python",
	"python.terminal.activateEnvironment": true,

	// File associations
	"files.associations": {
		"*.toml": "toml",
		"*.rs": "rust"
	},

	// Auto-save
	"files.autoSave": "afterDelay",
	"files.autoSaveDelay": 1000,

	// Trailing whitespace
	"files.trimTrailingWhitespace": true,
	"files.insertFinalNewline": true,

	// Terminal
	"terminal.integrated.env.linux": {
		"RUST_BACKTRACE": "1"
	},
	"terminal.integrated.env.osx": {
		"RUST_BACKTRACE": "1"
	},

	// Exclude from file watcher (performance)
	"files.watcherExclude": {
		"**/target/**": true,
		"**/venv/**": true,
		"**/__pycache__/**": true
	},

	// Editor settings
	"editor.rulers": [100],
	"editor.tabSize": 4,
	"editor.insertSpaces": true
}
